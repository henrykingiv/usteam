@Library('shared-lib') _

pipeline{
  agent any
  stages{
    stage('Maven Artifact Build') {
      steps{
        script {
          mavenBuild()
        }
      }
    }
    stage('Build Image') {
      steps{
        script {
          dockerBuild('henrykingiv/petclinicapps', '.')
        }
      }
    }
    stage('Docker Login') {
      steps{
        script {
          dockerLogin()
        }
      }
    }
    stage('Docker Push') {
      steps {
        script {
          // Use Jenkins credentials ID
           pushDocker('henrykingiv/petclinicapps', 'docker-creds', 'docker')
                }
            }
        }

  }
}
