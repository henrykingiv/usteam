@Library('shared-lib') _

pipeline{
  agent any
  stages{
    stage('Maven Build') {
      steps{
        script {
          mavenBuild()
        }
      }
    }
    stage('Build Image') {
      steps{
        script {
          dockerBuild('petclinicapps')
        }
      }
    }
    stage('Docker Login') {
      steps {
        script {
          // Use Jenkins credentials ID
           dockerPush('petclinicapps', 'docker-creds', 'https://hub.docker.com/repositories/henrykingiv')
                }
            }
        }

  }
}
