@Library('shared-lib') _

pipeline{
  agent any
  stages{
    stage('Maven Build') {
      steps{
        script {
          mavenBuild()
        }
      }
    }
    stage('Build Image') {
      steps{
        script {
          dockerBuild('petclinicapps')
        }
      }
    }

    stage('Docker Push') {
      steps {
        script {
          DockerUtils.push('petclinicapps:latest', 'https://hub.docker.com/repositories/henrykingiv', env.DOCKER_USERNAME, env.DOCKER_PASSWORD)
                }
            }
        }

  }
}
